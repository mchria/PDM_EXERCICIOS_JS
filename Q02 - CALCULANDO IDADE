<script>
function CalcIdade() {
  var AnoNasci = prompt ("digite o ano de seu nascimento:") 
  var Idade = (AnoNasci) => {return 2022 - AnoNasci}
  if (AnoNasci < 0) {
    throw "digite um valor maior que zero"
  }
   else{
     console.log("Sua idade em 2022 é: " + Idade(AnoNasci))
   }
    
  }
</script>

