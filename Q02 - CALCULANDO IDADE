function soma (a, b){
    try {
  if (a < 0 || b < 0){
    throw "o valor é negativo";
  }
  var result = a + b;
  //console.log(result);
  alert(result);
  //in o resultado é <p id="q01"></p>
  document.getElementById("q01").innerHTML =  result;
 
} catch(err){
    console.log(err);
  alert(err);
}
}
